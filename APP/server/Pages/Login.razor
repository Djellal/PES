@page "/login"
@layout LoginLayout
@inherits Pes.Pages.LoginComponent

@using Radzen
@using Radzen.Blazor
@using Pes.Models.DMdel
@using Microsoft.AspNetCore.Identity;
@using Pes.Models
@using Microsoft.AspNetCore.Authorization
<PageTitle>Login</PageTitle>
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Se connecter">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm Action="@($"account/login?redirectUrl={redirectUrl}")" Data="@("login")" Method="post">
          <ChildContent>
            <RadzenLogin AllowRegister="false" AllowResetPassword="false" LoginText="Se connecter" PasswordRequired="Le mot de passe est requis" PasswordText="Mot de passe" RegisterText="S'enregistrer" RememberMeText="Se souvenir de moi" UserRequired="Le nom est requis" UserText="Nom" Register="@Login0Register">
            </RadzenLogin>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
