@page "/"
@page "/accueil"
@layout MainLayout
@inherits Pes.Pages.AccueilComponent

@using Radzen
@using Radzen.Blazor
@using Pes.Models.DMdel
@using Microsoft.AspNetCore.Identity;
@using Pes.Models
@using Microsoft.AspNetCore.Authorization
<PageTitle>Accueil</PageTitle>
<RadzenContent Container="main">
  <ChildContent>
    <div class="row justify-content-between">
      <div class="justify-content-center d-flex align-items-center col-md-1">
        <RadzenImage Path="assets/images/Embleme-minister1024.png" style="height: 100px; width: 100px">
        </RadzenImage>
      </div>
      <div class="col-md-8">
        <RadzenHeading Size="H2" style="text-align: center" Text="وزارة التعليم العالي و البحث العلمي">
        </RadzenHeading>
        <RadzenHeading Size="H3" style="text-align: center" Text="ⴰⵖⵍⵉⴼ ⵏ ⵓ ⵙⴻⵍⵎⴻⴷ ⵓⵏⵏⵉⴳ ⴷ ⵓⵏⴰⴷⵉ ⵓⵙⵙⵏⴰⵏ">
        </RadzenHeading>
        <RadzenHeading Size="H3" style="text-align: center" Text="MINISTRY OF HIGHER EDUCATION  AND SCIENTIFIC RESEARCH">
        </RadzenHeading>
      </div>
      <div class="justify-content-center d-flex align-items-center col-md-1">
        <RadzenImage Path="assets/images/Embleme-minister1024.png" style="height: 100px; width: 100px">
        </RadzenImage>
      </div>
    </div>
    <div class="row justify-content-center align-items-center">
      <div class="justify-content-center d-flex align-items-center col-md-4">
        <RadzenImage Path="assets/images/channels4_profile.png" style="height: 200px; width: 300px">
        </RadzenImage>
      </div>
    </div>
    <div class="row justify-content-center align-items-center" style="background-color: rgb(0, 120, 212); margin-top: 20px; padding-bottom: 10px; padding-top: 10px">
      <div class="justify-content-center d-flex align-items-center col-md-8">
        <RadzenHeading Size="H3" style="color: #e6ecef; text-align: center" Text="Formation TIC et pratiques pédagogiques">
        </RadzenHeading>
      </div>
      <div class="justify-content-center d-flex align-items-center col-md-8">
        <RadzenHeading Size="H3" style="color: #e6ecef; text-align: center" Text="Plateforme d’évaluation des productions pédagogiques
        ">
        </RadzenHeading>
      </div>
    </div>
    <div class="row justify-content-center" style="margin-top: 15px">
      <div class="col-md-6">
        <RadzenCard style="padding-bottom: 25px; padding-left: 20px; padding-right: 20px; padding-top: 25px" Visible="@(!Security.IsAuthenticated())">
          <ChildContent>
            <RadzenTemplateForm Action="@($"account/login?redirectUrl={redirectUrl}")" Data="@("login")" Method="post">
              <ChildContent>
                <RadzenLogin AllowRegister="false" AllowResetPassword="false" LoginText="Se connecter" PasswordRequired="Le mot de passe est requis" PasswordText="Mot de passe" RegisterText="S'enregistrer" RememberMeText="Se souvenir de moi" UserRequired="Le nom est requis" UserText="Nom" Register="@Login0Register">
                </RadzenLogin>
              </ChildContent>
            </RadzenTemplateForm>
          </ChildContent>
        </RadzenCard>
      </div>
    </div>
    <div class="row justify-content-center" style="margin-top: 15px">
      <div class="col-md-6">
        <RadzenCard style="background-color: rgba(104, 213, 200, 0.28); padding-bottom: 25px; padding-left: 20px; padding-right: 20px; padding-top: 25px" Visible="false">
          <ChildContent>
            <RadzenHeading Size="H2" style="color: #f00606; text-align: center" Text="@("Session : "+Globals.ActiveSession?.NomSession)">
            </RadzenHeading>
          </ChildContent>
        </RadzenCard>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
